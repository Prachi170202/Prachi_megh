<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>

    <div ng-controller="app.views.person.index as vm">
        <div class="block-header">


            <h2>Person</h2>
        </div>



        <div class="body table-responsive" ng-if="vm.person.length > 0">
            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <th>@L("FirstName")</th>
                        <th>@L("LastName")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="items in vm.person">
                        <td>{{items.firstName}}</td>
                        <td>{{items.lastName}}</td>
                        <td>
                            <button type="button" class="glyphicon glyphicon-edit" ng-click="vm.editdata(items)"></button>
                            <button type="button" class="glyphicon glyphicon-arrow-down" ng-click="vm.deletedata(items)"></button>
                        </td>
                    </tr>
                </tbody>
            </table>

            <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openPersonCreationModal()">
                <i class="material-icons">add</i>
            </button>

        </div>
    </div>


</body>
</html>








